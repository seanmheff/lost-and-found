div(ng-include='"components/sidebar/sidebar.html"', style="height:100%;")
.col-sm-9
  ul.list-group
    li.list-group-item(ng-repeat="item in items | orderBy:'dateAdded':true")
      .row
        .col-sm-8
          a(href='/view/{{item._id}}')
            i(ng-class="getIconClass(item.category.name)")
            | {{item.title}}
        .col-sm-4
          small.pull-right {{item.dateAdded | date:'medium'}}
